
<article>
<div class="p-2 d-flex flex-row mb-3 justify-content-between">
   <h1>
   <%= @article.title %>
   <small>
    <%= link_to edit_article_path(@article) do %>
        <i class="fa fa-pencil"></i>
    <% end %>
   <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"} do %>
        <i class="fa fa-trash"></i>
    <% end %>
   </small>
   </h1>
  </div>
  <hr>
    <p><%= @article.content %></p>
</article>

 <div class="mt-3">
  <%= link_to "Back to list", articles_path %>
</div>
